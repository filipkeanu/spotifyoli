<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.oliviafil.spotify"
        version="0.7.0">

  <name>Hello</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/spotifyoli.js" target="js/spotifyoli.js"/>

  <js-module src="www/spotifyoli.js" name="spotifyoli">
    <clobbers target="spotifyoli" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Spotifyoli">
        <param name="android-package" value="com.oliviafil.plugin.Spotifyoli"/>
      </feature>
    </config-file>

    <source-file src="src/android/spotifyoli.java" target-dir="src/com/oliviafil/plugin/"/>
  </platform>

</plugin>
